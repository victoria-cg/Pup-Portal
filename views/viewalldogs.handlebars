<h2 id="viewAll-h2">Current Dogs</h2>

<!--handlebars syntax version of a loop to get each dog as alias |dog|, and print all the properties for each dog-->
<!--To Do: check if correct naming to retrieve the dog data properly-->
{{#each dogs as |Dog|}}
  <div class="dog-container">
    <h2 class="dog-name">{{Dog.name}}</h2>
    <div class="dog-details">
      <p class="dog-data">Breed: {{Dog.breed}}</p>
      <p class="dog-data">Age: {{Dog.age}}</p>
      <p class="dog-data">Size: {{Dog.size}}</p>
      <p class="dog-data">Weight: {{Dog.weight}}</p>
      <p class="dog-data">Sex: {{Dog.sex}}</p>
      <p class="dog-data">Vaccinated: {{Dog.vaccinated}}</p>
      <p class="dog-data">Spayed/Neutered: {{Dog.spayed}}</p>
      <p class="dog-data">Fee: {{Dog.fee}}</p>
      <!-- Add any other properties you want to display -->
    </div>
  </div>
{{/each}}
